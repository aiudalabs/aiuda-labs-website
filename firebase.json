{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/en.html"
      },
      {
        "source": "/es",
        "destination": "/es.html"
      },
      {
        "source": "/pt", 
        "destination": "/pt.html"
      },
      {
        "source": "/en",
        "destination": "/en.html"
      },
      {
        "source": "/es/**",
        "destination": "/es.html"
      },
      {
        "source": "/pt/**",
        "destination": "/pt.html"
      },
      {
        "source": "/en/**",
        "destination": "/en.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}